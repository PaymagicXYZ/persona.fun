{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@persona/*": ["packages/*/src"]
    }
  },
  "references": [
    { "path": "packages/db", "composite": true },
    { "path": "packages/utils", "composite": true },
    { "path": "packages/api", "composite": true },
    { "path": "packages/circuits", "composite": true }
  ]
}
