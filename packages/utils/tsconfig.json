{
	"compilerOptions": {
	  "target": "ESNext",
	  "module": "ESNext",
	  "moduleResolution": "Bundler",
	  "esModuleInterop": true,
	  "resolveJsonModule": true,                        /* Enable importing .json files. */
	  "strict": true,
	  "skipLibCheck": true,
	  "baseUrl": ".",
	  "paths": {
		"@persona/*": ["../../packages/*/src"]
	  }
	},
	"include": ["src"]
  }
  